@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Localization
@using Tailcode
@inject IStringLocalizer<SharedResource> Localizer

<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Tailcode - @Localizer["FooterDescription"]" />
    <meta name="keywords" content="custom software, enterprise software, workflow solutions, software development, Tailcode" />
    <meta name="author" content="Tailcode" />
    
    <title>@ViewData["Title"] - Tailcode</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/images/logo-icon.png" />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Styles -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lipis/flag-icons@7.2.3/css/flag-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar" id="navbar">
        <div class="navbar-container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img src="~/images/logo-icon.png" alt="Tailcode Logo" />
                <span>tailcode</span>
            </a>
            
            <button class="navbar-toggle" id="navbarToggle" aria-label="Toggle menu">
                <span></span>
                <span></span>
                <span></span>
            </button>
            
            <ul class="navbar-nav" id="navbarNav">
                <li>
                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" 
                       asp-controller="Home" asp-action="Index">@Localizer["NavHome"]</a>
                </li>
                <li>
                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "About" ? "active" : "")" 
                       asp-controller="Home" asp-action="About">@Localizer["NavAbout"]</a>
                </li>
                <li>
                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Services" ? "active" : "")" 
                       asp-controller="Home" asp-action="Services">@Localizer["NavServices"]</a>
                </li>
                <li>
                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Solutions" ? "active" : "")" 
                       asp-controller="Home" asp-action="Solutions">@Localizer["NavSolutions"]</a>
                </li>
                <li>
                    <!-- Language Dropdown -->
                    @{
                        var requestCulture = Context.Features.Get<IRequestCultureFeature>();
                        var currentCulture = requestCulture?.RequestCulture.UICulture.Name ?? "tr-TR";
                        var currentCode = currentCulture == "en-GB" ? "gb" :
                                          currentCulture == "en-US" ? "us" :
                                          currentCulture.StartsWith("tr") ? "tr" :
                                          currentCulture.StartsWith("fr") ? "fr" :
                                          currentCulture.StartsWith("ko") ? "kr" :
                                          currentCulture.StartsWith("ja") ? "jp" :
                                          currentCulture.StartsWith("zh") ? "cn" : "tr";
                    }
                    <div class="lang-dropdown">
                        <button class="lang-dropdown-toggle" aria-label="Select Language">
                            <span class="fi fi-@currentCode current-flag"></span>
                            <svg class="dropdown-arrow" width="10" height="6" viewBox="0 0 10 6" fill="currentColor">
                                <path d="M1 1L5 5L9 1" stroke="currentColor" stroke-width="1.5" fill="none"/>
                            </svg>
                        </button>
                        <div class="lang-dropdown-menu">
                            <a href="javascript:void(0)" onclick="setLanguage('tr-TR')" class="lang-option @(currentCulture == "tr-TR" ? "active" : "")">
                                <span class="fi fi-tr flag"></span><span class="lang-name">Türkçe</span>
                            </a>
                            <a href="javascript:void(0)" onclick="setLanguage('en-GB')" class="lang-option @(currentCulture == "en-GB" ? "active" : "")">
                                <span class="fi fi-gb flag"></span><span class="lang-name">English (UK)</span>
                            </a>
                            <a href="javascript:void(0)" onclick="setLanguage('en-US')" class="lang-option @(currentCulture == "en-US" ? "active" : "")">
                                <span class="fi fi-us flag"></span><span class="lang-name">English (US)</span>
                            </a>
                            <a href="javascript:void(0)" onclick="setLanguage('fr-FR')" class="lang-option @(currentCulture == "fr-FR" ? "active" : "")">
                                <span class="fi fi-fr flag"></span><span class="lang-name">Français</span>
                            </a>
                            <a href="javascript:void(0)" onclick="setLanguage('ko-KR')" class="lang-option @(currentCulture == "ko-KR" ? "active" : "")">
                                <span class="fi fi-kr flag"></span><span class="lang-name">한국어</span>
                            </a>
                            <a href="javascript:void(0)" onclick="setLanguage('ja-JP')" class="lang-option @(currentCulture == "ja-JP" ? "active" : "")">
                                <span class="fi fi-jp flag"></span><span class="lang-name">日本語</span>
                            </a>
                            <a href="javascript:void(0)" onclick="setLanguage('zh-CN')" class="lang-option @(currentCulture == "zh-CN" ? "active" : "")">
                                <span class="fi fi-cn flag"></span><span class="lang-name">中文</span>
                            </a>
                        </div>
                    </div>
                </li>
                <li class="nav-cta">
                    <a class="btn btn-primary" asp-controller="Home" asp-action="Contact">@Localizer["NavContact"]</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="navbar-overlay" id="navbarOverlay"></div>

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-grid">
                <!-- Brand Column -->
                <div class="footer-brand">
                    <img src="~/images/logo-dark.png" alt="Tailcode" style="height: 60px; width: auto;" />
                    <p>@Localizer["FooterDescription"]</p>
                </div>
                
                <!-- Quick Links -->
                <div>
                    <h4 class="footer-title">@Localizer["FooterQuickLinks"]</h4>
                    <ul class="footer-links">
                        <li><a asp-controller="Home" asp-action="Index">@Localizer["NavHome"]</a></li>
                        <li><a asp-controller="Home" asp-action="About">@Localizer["NavAbout"]</a></li>
                        <li><a asp-controller="Home" asp-action="Services">@Localizer["NavServices"]</a></li>
                        <li><a asp-controller="Home" asp-action="Solutions">@Localizer["NavSolutions"]</a></li>
                    </ul>
                </div>
                
                <!-- Services -->
                <div>
                    <h4 class="footer-title">@Localizer["FooterServices"]</h4>
                    <ul class="footer-links">
                        <li><a href="#">@Localizer["ServiceCustomSoftware"]</a></li>
                        <li><a href="#">@Localizer["ServiceWorkflow"]</a></li>
                        <li><a href="#">@Localizer["ServiceDataReporting"]</a></li>
                        <li><a href="#">@Localizer["ServicePrototype"]</a></li>
                    </ul>
                </div>
                
                <!-- Contact & Social -->
                <div>
                    <h4 class="footer-title">@Localizer["FooterContact"]</h4>
                    <ul class="footer-links">
                        <li><a asp-controller="Home" asp-action="Contact">@Localizer["FooterContactUs"]</a></li>
                    </ul>
                    <h4 class="footer-title" style="margin-top: 24px;">@Localizer["FooterSocial"]</h4>
                    <div class="footer-social">
                        <a href="#" title="LinkedIn" aria-label="LinkedIn">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                            </svg>
                        </a>
                        <a href="#" title="Twitter/X" aria-label="Twitter">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                            </svg>
                        </a>
                        <a href="#" title="GitHub" aria-label="GitHub">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="footer-bottom">
                <p>&copy; @DateTime.Now.Year Tailcode. @Localizer["FooterRights"]</p>
                <p>@Localizer["FooterSlogan"]</p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function setLanguage(culture) {
            document.cookie = `.AspNetCore.Culture=c=${culture}|uic=${culture};path=/;max-age=31536000`;
            location.reload();
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
