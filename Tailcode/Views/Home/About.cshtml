@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["AboutTitle"];
}

<!-- Page Header -->
<section class="page-header">
    <div class="container">
        <div class="page-header-content">
            <span class="section-subtitle">@Localizer["AboutSubtitle"]</span>
            <h1>@Localizer["AboutHeading"]</h1>
            <p>@Localizer["AboutDescription"]</p>
        </div>
    </div>
</section>

<!-- What is Tailcode -->
<section class="section">
    <div class="container">
        <div class="about-grid">
            <div data-animate>
                <h2>@Localizer["WhatIsTitle"]</h2>
                <p class="lead">
                    @Localizer["WhatIsText"]
                </p>
                <div style="margin-top: 32px; padding: 24px; background: var(--bg-secondary); border-radius: var(--radius-md); border-left: 4px solid var(--accent-blue);">
                    <p style="margin: 0 0 12px; color: var(--text-secondary);">@Localizer["NotAgency"]</p>
                    <p style="margin: 0 0 12px; color: var(--text-secondary);">@Localizer["NotProduct"]</p>
                    <p style="margin: 0 0 12px; color: var(--text-secondary);">@Localizer["NotEverything"]</p>
                    <p style="margin: 0; color: var(--accent-green); font-weight: 600;">
                        @Localizer["IsPartner"]
                    </p>
                </div>
            </div>
            <div data-animate>
                <div class="card" style="padding: 48px; text-align: center;">
                    <img src="~/images/logo-icon-dark.png" alt="Tailcode" style="width: 150px; margin-bottom: 24px;" />
                    <h3 style="margin-bottom: 8px;">tailcode</h3>
                    <p class="gradient-text" style="font-size: 1.125rem; font-style: italic; margin: 0;">
                        @Localizer["HeroSlogan1"] @Localizer["HeroSlogan2"]
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

