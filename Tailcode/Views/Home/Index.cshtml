@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["HomeTitle"];
}

<!-- Hero Section -->
<section class="hero">
    <div class="hero-content">
        <img src="~/images/logo-icon-dark.png" alt="Tailcode" class="hero-logo" />
        <h1 class="hero-title">
            <span class="gradient-text">@Localizer["HeroSlogan1"]</span><br />
            @Localizer["HeroSlogan2"]
        </h1>
        <p class="hero-subtitle">
            @Localizer["HeroSubtitle"]
        </p>
        <div class="hero-actions">
            <a asp-controller="Home" asp-action="Contact" class="btn btn-primary">
                @Localizer["HeroCTA"]
            </a>
            <a asp-controller="Home" asp-action="Services" class="btn btn-outline">
                @Localizer["HeroSecondary"]
            </a>
        </div>
    </div>
</section>

<!-- Problem Section -->
<section class="section">
    <div class="container">
        <div class="problem-grid">
            <div class="problem-content" data-animate>
                <span class="section-subtitle">@Localizer["ProblemSubtitle"]</span>
                <h2>@Localizer["ProblemTitle"]</h2>
                <p class="lead">
                    @Localizer["ProblemText"]
                </p>
                <ul class="problem-list">
                    <li>@Localizer["ProblemItem1"]</li>
                    <li>@Localizer["ProblemItem2"]</li>
                    <li>@Localizer["ProblemItem3"]</li>
                    <li>@Localizer["ProblemItem4"]</li>
                </ul>
                <p style="margin-top: 24px; font-weight: 500; color: var(--accent-green);">
                    @Localizer["ProblemSolve"]
                </p>
            </div>
            <div class="problem-visual" data-animate>
                <div class="card" style="text-align: center; padding: 48px;">
                    <div class="stat-number" style="font-size: 5rem;">%30</div>
                    <p style="font-size: 1.25rem; margin-top: 16px;">
                        @Localizer["CriticalNeeds30Text"]<br />
                        <strong style="color: var(--accent-yellow);">@Localizer["CriticalNeeds30Strong"]</strong>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Services Overview -->
<section class="section" style="background: var(--bg-secondary);">
    <div class="container">
        <div class="section-header" data-animate>
            <span class="section-subtitle">@Localizer["ServicesSubtitle"]</span>
            <h2>@Localizer["ServicesTitle"]</h2>
            <p>@Localizer["ServicesText"]</p>
        </div>
        
        <div class="card-grid">
            <div class="card" data-animate>
                <div class="card-icon">🏢</div>
                <h3 class="card-title">@Localizer["ServiceCustomSoftware"]</h3>
                <p class="card-text">
                    @Localizer["ServiceCustomSoftwareDesc"]
                </p>
            </div>
            
            <div class="card" data-animate>
                <div class="card-icon">⚙️</div>
                <h3 class="card-title">@Localizer["ServiceWorkflow"]</h3>
                <p class="card-text">
                    @Localizer["ServiceWorkflowDesc"]
                </p>
            </div>
            
            <div class="card" data-animate>
                <div class="card-icon">📊</div>
                <h3 class="card-title">@Localizer["ServiceDataReporting"]</h3>
                <p class="card-text">
                    @Localizer["ServiceDataReportingDesc"]
                </p>
            </div>
            
            <div class="card" data-animate>
                <div class="card-icon">🚀</div>
                <h3 class="card-title">@Localizer["ServicePrototype"]</h3>
                <p class="card-text">
                    @Localizer["ServicePrototypeDesc"]
                </p>
            </div>
        </div>
        
        <div class="text-center" style="margin-top: 48px;">
            <a asp-controller="Home" asp-action="Services" class="btn btn-outline">
                @Localizer["ViewAllServices"] →
            </a>
        </div>
    </div>
</section>

<!-- Process Section -->
<section class="section">
    <div class="container">
        <div class="section-header" data-animate>
            <span class="section-subtitle">@Localizer["MethodologySubtitle"]</span>
            <h2>@Localizer["MethodologyTitle"]</h2>
            <p>@Localizer["MethodologyText"]</p>
        </div>
        
        <div class="process-grid">
            <div class="process-item" data-animate>
                <div class="process-number">1</div>
                <h4 class="process-title">@Localizer["Step1Title"]</h4>
                <p class="process-text">@Localizer["Step1Text"]</p>
            </div>
            
            <div class="process-item" data-animate>
                <div class="process-number">2</div>
                <h4 class="process-title">@Localizer["Step2Title"]</h4>
                <p class="process-text">@Localizer["Step2Text"]</p>
            </div>
            
            <div class="process-item" data-animate>
                <div class="process-number">3</div>
                <h4 class="process-title">@Localizer["Step3Title"]</h4>
                <p class="process-text">@Localizer["Step3Text"]</p>
            </div>
            
            <div class="process-item" data-animate>
                <div class="process-number">4</div>
                <h4 class="process-title">@Localizer["Step4Title"]</h4>
                <p class="process-text">@Localizer["Step4Text"]</p>
            </div>
            
            <div class="process-item" data-animate>
                <div class="process-number">5</div>
                <h4 class="process-title">@Localizer["Step5Title"]</h4>
                <p class="process-text">@Localizer["Step5Text"]</p>
            </div>
        </div>
    </div>
</section>

<!-- What We Don't Do Section -->
<section class="section" style="background: var(--bg-secondary);">
    <div class="container">
        <div class="section-header" data-animate>
            <span class="section-subtitle">@Localizer["LimitsSubtitle"]</span>
            <h2>@Localizer["LimitsTitle"]</h2>
            <p>@Localizer["LimitsText"]</p>
        </div>
        
        <div class="card-grid" style="max-width: 900px; margin: 0 auto;">
            <div class="card" data-animate style="border-left: 3px solid var(--accent-yellow);">
                <p class="card-text" style="margin: 0;">
                    <strong style="color: var(--text-primary);">✗</strong> @Localizer["LimitItem1"]
                </p>
            </div>
            <div class="card" data-animate style="border-left: 3px solid var(--accent-yellow);">
                <p class="card-text" style="margin: 0;">
                    <strong style="color: var(--text-primary);">✗</strong> @Localizer["LimitItem2"]
                </p>
            </div>
            <div class="card" data-animate style="border-left: 3px solid var(--accent-yellow);">
                <p class="card-text" style="margin: 0;">
                    <strong style="color: var(--text-primary);">✗</strong> @Localizer["LimitItem3"]
                </p>
            </div>
            <div class="card" data-animate style="border-left: 3px solid var(--accent-yellow);">
                <p class="card-text" style="margin: 0;">
                    <strong style="color: var(--text-primary);">✗</strong> @Localizer["LimitItem4"]
                </p>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="section">
    <div class="cta-section">
        <div class="cta-content" data-animate>
            <h2 class="cta-title">@Localizer["CTATitle"]</h2>
            <p class="cta-text">
                @Localizer["CTAText"]
            </p>
            <a asp-controller="Home" asp-action="Contact" class="btn btn-primary">
                @Localizer["CTAButton"]
            </a>
        </div>
    </div>
</section>
