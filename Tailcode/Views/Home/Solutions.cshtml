@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["SolutionsTitle"];
}

<!-- Page Header -->
<section class="page-header">
    <div class="container">
        <div class="page-header-content">
            <span class="section-subtitle">@Localizer["SolutionsSubtitle"]</span>
            <h1>@Localizer["SolutionsHeading"]</h1>
            <p>@Localizer["SolutionsDescription"]</p>
        </div>
    </div>
</section>

<!-- The Problem -->
<section class="section">
    <div class="container">
        <div class="problem-grid">
            <div data-animate>
                <span class="section-subtitle">@Localizer["CoreProblem"]</span>
                <h2>@Localizer["WhyNotEnough"]</h2>
                <p class="lead">
                    @Localizer["ProblemText"]
                </p>
                <p>
                    @Localizer["This30Leads"]
                </p>
                <ul class="problem-list">
                    <li>@Localizer["Sol1Item1"]</li>
                    <li>@Localizer["Sol1Item2"]</li>
                    <li>@Localizer["Sol1Item3"]</li>
                    <li>@Localizer["Sol1Item4"]</li>
                    <li>@Localizer["Sol1Item5"]</li>
                </ul>
            </div>
            <div data-animate>
                <div class="card" style="padding: 48px; text-align: center; background: linear-gradient(145deg, rgba(79, 195, 247, 0.1) 0%, rgba(129, 199, 132, 0.05) 100%);">
                    <div class="percent-comparison" style="display: flex; justify-content: center; gap: 24px; margin-bottom: 32px;">
                        <div style="text-align: center;">
                            <div class="stat-number" style="font-size: 3.5rem; color: var(--text-muted);">%70</div>
                            <p style="color: var(--text-muted); font-size: 0.875rem;">@Localizer["ReadySystems"]<br/>@Localizer["Covers"]</p>
                        </div>
                        <div style="width: 2px; background: var(--border-color);"></div>
                        <div style="text-align: center;">
                            <div class="stat-number" style="font-size: 3.5rem;">%30</div>
                            <p style="color: var(--accent-yellow); font-size: 0.875rem;">@Localizer["CriticalNeeds"]<br/><strong>@Localizer["NotCovered"]</strong></p>
                        </div>
                    </div>
                    <p style="margin: 0; font-weight: 500; color: var(--accent-green);">
                        @Localizer["TailcodeSolves"]
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

